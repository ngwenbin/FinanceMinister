{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"],
      "@assets": ["src/assets/*"],
      "@components": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@customTypes/*": ["src/customTypes/*"],
      "@hooks": ["src/hooks/*"],
      "@navigation": ["src/navigation/*"],
      "@screens": ["src/screens/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
